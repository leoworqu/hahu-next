// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artist {
  id String @id @default(cuid())
  slug String @unique
  name String
  bio String
  updatedAt DateTime  @default(now())
  createdAt DateTime @default(now())
  albums Albums[]
  songs Songs[]
}

model Albums {
  id String @id @default(cuid())
  slug String @unique
  title String
  year Int
  albumArt String? @default("/placeholder-image.png")
  artist Artist @relation(fields: [artistId], references: [id])
  artistId String
  updatedAt DateTime  @default(now())
  createdAt DateTime @default(now())
  songs Songs[]
}

model Songs {
  id String @id @default(cuid())
  slug String @unique
  title String
  artistId  String
  artist Artist @relation(fields: [artistId], references: [id])
  albumId String?
  album Albums? @relation(fields: [albumId], references: [id])
  lyrics String
  coverArt String? @default("/placeholder-image.png")
  updatedAt DateTime  @default(now())
  createdAt DateTime @default(now())
}